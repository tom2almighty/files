#!name = Fix VVebo User Profile
#!desc = 修复VVebo失效的用户页面，需要打开Mitm，感谢@suiyuran。
#!category=工具
[Script]
fix-vvebo-user-timeline = type=http-request, pattern=^https:\/\/api\.weibo\.cn\/2\/remind\/unread_count\?, script-path=https://raw.githubusercontent.com/tom2almighty/files/main/Script/fix-vvebo-timeline.js
fix-vvebo-user-timeline2 = type=http-request, pattern=^https:\/\/api\.weibo\.cn\/2\/statuses\/user_timeline\?, script-path=https://raw.githubusercontent.com/tom2almighty/files/main/Script/fix-vvebo-timeline.js
fix-vvebo-user-timeline3 = type=http-response, pattern=^https:\/\/api\.weibo\.cn\/2\/profile\/statuses\/tab\?, script-path=https://raw.githubusercontent.com/tom2almighty/files/main/Script/fix-vvebo-timeline.js, requires-body=true
fix-vvebo-fans = type=http-response, pattern=^https:\/\/api\.weibo\.cn\/2\/cardlist\?, script-path=https://raw.githubusercontent.com/tom2almighty/files/main/Script/fix-vvebo-fans.js, requires-body=true


[Mitm]
hostname = %APPEND% api.weibo.cn
