#!name = Fix VVebo User Profile
#!desc = 修复VVebo失效的用户页面，需要打开Mitm，感谢@suiyuran。

[Script]
VVebo_Request = type=http-request,pattern=^https:\/\/api\.weibo\.cn\/2\/(users\/show\?|statuses\/user_timeline\?),requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/tom2almighty/files/master/fix-vvebo.js
VVebo_Response = type=http-response,pattern=^https:\/\/api\.weibo\.cn\/2\/profile\/statuses\/tab\?,requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/tom2almighty/files/master/fix-vvebo.js

[Mitm]
hostname = %APPEND% api.weibo.cn
